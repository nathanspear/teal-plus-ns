{
  "manifest_version": 3,
  "name": "Teal+ 2.0ns",
  "version": "2.0.0",
  "version_name": "2.0ns",
  "description": "Teal+ is a browser extension that helps you manage your Teal resumes more efficiently.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "https://app.tealhq.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://app.tealhq.com/*"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Teal Auto-OFF Pro",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/icons/*"],
      "matches": ["https://app.tealhq.com/*"]
    }
  ]
}
